10 '16WAY HANABI
100 COLOR 15,1,1:KEY OFF:SCREEN 1,0:
110 PI=ATN(1)*8/360
120 DIM DG(16):DIM RD(16):DIM RC(16):DIM RS(16):DIM X(16):DIM Y(16)

140 FOR I=0 TO 15:DG(I)=I*22.5:X(I)=124:Y(I)=92:NEXT I
150 FOR I=0 TO 15:RD(I)=DG(I)*PI:NEXT I
160 FOR I=0 TO 15:RC(I)=COS(RD(I)):RS(I)=SIN(RD(I)):NEXT I

300 'SPRITE
310 FOR I=0 TO 7:READ DT$:SP$=SP$+CHR$(VAL("&B"+DT$)):NEXT I
320 FOR J=0 TO 15:SPRITE$(J)=SP$:NEXT J

325 'SYOKIHAICHI
330 FOR A=0 TO 14 STEP 2:PUT SPRITE A,(X(0),Y(0)),9,A:NEXT A
340 FOR B=1 TO 15 STEP 2:PUT SPRITE B,(X(0),Y(0)),11,B:NEXT B

500 'FIRE
510 FOR J=0 TO 100
520 FOR I=0 TO 15
530 X(I)=X(I)+RC(I):Y(I)=Y(I)+RS(I)
540 PUT SPRITE I,(X(I),Y(I)),,I
550 NEXT I
560 NEXT J
570 FOR I=0 TO 15:X(I)=124:Y(I)=92:NEXT:GOTO 330

