10 SCREEN 1,2,0:COLOR 15,5,1:DEFINT A-Z:KEY OFF
15 DEFUSR=&H7E:A=USR(0):S=BASE(14):P=1:KX=32:KY=128
100 'PCG SET
110 M=ASC("a"):RESTORE 1000
120 FOR I=0 TO 7:READ D$
130 VPOKE M*8+I,VAL("&B"+D$)
140 VPOKE &H800+M*8+I,VAL("&B"+D$)
150 VPOKE &H1000+M*8+I,VAL("&B"+D$)
160 NEXT
300 'PCG COLOR
310 FOR I=0 TO 7:READ C$
320 VPOKE &H2000+M*8+I,VAL("&H"+C$)
330 VPOKE &H2800+M*8+I,VAL("&H"+C$)
340 VPOKE &H3000+M*8+I,VAL("&H"+C$)
350 NEXT
360 FOR I=&H30 TO &H5A:FOR X=0 TO 7
370 VPOKE &H2000+I*8+X,VAL("&HF1")
380 NEXT:NEXT
400 'SPRITE SET
410 RESTORE 1500
420 READ D$:IF D$="+" THEN 430 ELSE VPOKE S,VAL("&H"+D$):S=S+1:GOTO 420
430 READ D$:IF D$="+" THEN 500 ELSE VPOKE S,VAL("&H"+D$):S=S+1:GOTO 430 
500 'MAIN
510 FOR I=0 TO 14:LOCATE 1,I+3:?"aaa aaa aaa aaa aaa aaa aaa":NEXT
520 LOCATE 0,0:PRINT"SCORE:00000":LOCATE 21,0:PRINT"KAMO:00"
525 PUT SPRITE 0,(KX,KY),10,C:KX=KX+P
527 IF KX>240 OR KX<1 THEN P=P*-1:C=(C+1)MOD2
528 T#=TIME:IF T#>=65534 THEN T#=0
529 IF TIME-T#>2 THEN 530 ELSE 529
530 GOTO 525
